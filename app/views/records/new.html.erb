								} else if ( !/^[0-9\-\(\)]+$/.test(input.value) ) {
									errors += "請檢查您的電話格式。\n";
								}

							break;
							case "realname":
								if ( input.value.length <= 0 ) {
									errors += "請填寫您的真實姓名。\n";
									
								}
							break;
							case "address":
								if ( input.value.length <= 0 ) {
									errors += "請填寫您的地址。\n";
									
								}
							break;
							case "email":
								if ( input.value.length <= 0 ) {
									errors += "請填寫您的電子信箱。\n";									
								} else if ( !/^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}\.[a-zA-Z]{2,3}$/.test(input.value) ) {
									errors += "請檢查您的email格式。\n";
								}
							break;
							
							default: 
								if ( input.value.length <= 0 ) {
									errors += '請填寫完整資料，謝謝。\n';									
								}
							break;
						}
						
						if ( errors.length <= 0 ) {
							record.set(input.name, input.value);	
						}
						
					}
