<h1>Listing records</h1>

<table>
  <tr>
    <th>Score</th>
    <th>Time</th>
    <th>Questions</th>
    <th>Answers</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @records.each do |record| %>
  <tr>
    <td><%= record.score %></td>
    <td><%= record.time %></td>
    <td><%= record.questions %></td>
    <td><%= record.answers %></td>
    <td><%= record.name %></td>
    <td><%= record.email %></td>
    <td><%= record.phone %></td>
    <td><%= record.address %></td>
    <td><%= link_to 'Show', record %></td>
    <td><%= link_to 'Edit', edit_record_path(record) %></td>
    <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

